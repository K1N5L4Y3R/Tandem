<div class="wrapper2">

    <!-- Start Sticky Navigation -->
    <nav id="mainnav">
        <div class="container">
            <div class="row">
                <div class="span4">

                </div>
                <div class="span8">
                    <ul id="fluid-nav" class="fluid-navigation visible-desktop">
                        <li><%= link_to "Tandem", root_path, class:"scroll-link" %></li>

                        <li><%= link_to "únete", new_user_registration_path, class:"scroll-link" %></li>
                        <li class="current"><a>Inicia sesión</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!-- End Sticky Navigation -->

    <!-- Start About Page -->
    <section  class="page page-gray center">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="title"> <span class="color-text">Inicia Sesión</span> </div>
                    <hr>
                    <br><br>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="field">
                        <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
                      </div>

                      <div class="field">
                        <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña" %>
                      </div>

                      <% if devise_mapping.rememberable? -%>
                        <div class="field" style="">
                          <%= f.check_box :remember_me %>
                          <%= f.label(:remember_me, "Recuerdame", :style => "display: inline !important;")%>
                        </div>
                      <% end -%>
                      <br>
                      <div class="actions">
                        <%= f.submit "Iniciar sesión" %>
                      </div>
                    <% end %>
                    <%= render "devise/shared/links" %>

					</div>
				</div>
			</div>
		</section>
